<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head.ejs') %>
    </head>
    <body>

        <main class="container">
            <section class="row mt-5">
                <div class="col-md-8 mx-auto">
                    <h1> <i class="fa fa-solid fa-user text-danger"></i> Register Account </h1>
                    <hr>
                </div>
            </section>
            <section class="row mt-3">
                <div class="col-md-8 mx-auto">
                    
                    <form  class="border border-danger p-5" method="post" action="api/user/">

                        <!--Username-->

                        <label for="username">Username</label>
                        <input class="d-block mb-3 form-control darkInput" type="text" name="username" placeholder="Username" required>

                        <div class="error-box border border-danger p-2" id="name-errorbox">P</div>

                        <!--Email-->

                        <label for="email">Email</label>
                        <input class="d-block mb-3 form-control darkInput" type="email" name="email" placeholder="Email" required>

                        <div class="error-box border border-danger p-2" id="email-errorbox">P</div>

                        <!--Password-->

                        <label for="password">Password</label>
                        <input class="d-block mb-3 form-control darkInput" type="password" name="password" placeholder="Password" required>

                        <label for="">Confirm password</label>
                        <input class="d-block mb-3 form-control darkInput" type="password" name="confirmPassword" placeholder="Confirm password" required>

                        <div class="error-box border border-danger p-2" id="password-errorbox">P</div>

                        <button class="mt-5 btn btn-danger btn-block" type="submit">Register</button>

                    </form>
                </div>
            </section>
        </main>


        <!--Scripts-->

        <script src="/js/register/validateForm.js"></script>

    </body>
</html>